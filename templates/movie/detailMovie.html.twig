<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">{{ movieDetails.title }}</h5>
                <div style="padding: 0px 10px 0px 10px;">
                    {% for i in 1..5 %}
                        {% if movie.voteAverage | round / 2 >= i %}
                            <i class="fa fa-star" aria-hidden="true"></i>
                        {% else %}
                            <i class="fa fa-star-o" aria-hidden="true"></i>
                        {% endif %}
                    {% endfor %}
                </div>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="embed-responsive embed-responsive-16by9">
                    <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/{{ movieVideo[0].key }}?rel=0" allowfullscreen></iframe>
                </div>
                <p class="card-text">{{ movieDetails.overview }}</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>